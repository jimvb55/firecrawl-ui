*.ts    text eol=lf
*.tsx   text eol=lf
*.json  text eol=lf
*.css   text eol=lf
*.html  text eol=lf
*.md    text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.conf  text eol=lf

# Docker
Dockerfile     text eol=lf
*.dockerfile  text eol=lf

# Shell scripts
*.sh     text eol=lf
*.bash   text eol=lf

# Documentation
*.txt    text eol=lf
*.md     text eol=lf

# RC files
.*rc     text eol=lf

# Binary files
*.png binary
*.jpg binary
